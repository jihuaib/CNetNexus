<?xml version="1.0" encoding="UTF-8"?>
<configuration module_id="3">
    <!-- View definitions -->
    <views>
        <view name="bgp">
            <template>&lt;{hostname}(config-bgp)&gt;</template>
        </view>
    </views>

    <!-- Command group definitions -->
    <command_groups>
        <!-- Configuration command group -->
        <group name="config">
            <elements>
                <element id="1" type="keyword">
                    <name>bgp</name>
                    <description>BGP protocol configuration</description>
                </element>
                <element id="2" type="parameter">
                    <name>&lt;as-number&gt;</name>
                    <type>uint(1-63)</type>
                    <description>BGP as-number</description>
                </element>
            </elements>
            
            <commands>
                <command>
                    <expression>1 2</expression>
                    <views>config</views>
                    <callback>cmd_bgp</callback>
                </command>
            </commands>
        </group>
    </command_groups>
</configuration>
