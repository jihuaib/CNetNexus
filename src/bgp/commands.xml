        <group name="config">
            <elements>
                <element id="1" type="keyword">
                    <name>bgp</name>
                    <description>BGP协议</description>
                </element>
            </elements>
            
            <commands>
                <command>
                    <expression>1</expression>
                    <views>config</views>
                    <callback>cmd_bgp</callback>
                </command>
            </commands>
        </group>
    </command_groups>
</configuration>
